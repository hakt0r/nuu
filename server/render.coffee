  add = (s) ->
    x = Math.round(s.x / 1000)
    y = Math.round(s.y / 1000)
    map[10+y][10+x]++ if -10 < x < 10 and -10 < y < 10

  add s for k,s of @stellars
  add s for k,s of @ships
  add s for k,s of @objects

  console.log '\x1b[2J\x1b[1;1f'

  for r in map
    console.log r.map( (i) ->
      return (
        if i >= 10 then      '# '.red
        else if i >= 5  then '# '.yellow
        else if i >= 1 then  '# '.blue
        else '# '.black )
    ).join ''
  try console.log 'fixed', Object.keys(NUU.fixed).length
  try console.log 'moving',  Object.keys(NUU.moving).length
  try console.log 'accelerating', Object.keys(NUU.accelerating).length
  try console.log 'manouvering', Object.keys(NUU.manouvering).length

Engine::render.start = -> unless NUU.render.interval?
  NUU.render.interval = setInterval (-> NUU.render()), 100

Engine::render.stop = -> if NUU.render.interval?
  clearInterval NUU.render.interval
  delete NUU.render.interval